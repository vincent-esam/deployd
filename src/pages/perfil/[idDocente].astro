---
import Layout from "../../layouts/Layout.astro";
import HeroTitle from "../../components/ui/HeroTitle.astro";
import { DocenteInfo } from "../../components/perfil-doc/Profile";
// Obtenemos el parámetro `idDocente` de la URL
const { idDocente } = Astro.params;

// Aseguramos que el parámetro sea un número
const docenteId = Number(idDocente);
if (isNaN(docenteId)) {
  throw new Error("El ID del docente debe ser un número");
}
---


<Layout
  title="Sistema Academico ESAM | Programas"
  canonical="https://academico-docentes.esam.edu.bo/"
  description="Sistema académico de ESAM para contratación y postulación de docentes."
>
  <HeroTitle titulo="Perfil" />
  <body>
    <div id="docente-info">
      <DocenteInfo idDocente={Number(idDocente)} client:load />

    </div>
  </body>
</Layout>
