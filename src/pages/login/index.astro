---
import Layout from "../../layouts/Layout.astro";
import {Login} from "../../components/login/login";
---
<Layout
  title="Sistema Academico ESAM | Programas"
  canonical="https://academico-docentes.esam.edu.bo/"
  description="Sistema académico de ESAM para contratación y postulación de docentes."
>
<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(100vh - 100px); /* Ajustar para excluir el espacio del header y footer */
  }

  /* Imagen secundaria: teacherEsam */
  .teacher-image {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 500px; /* Menor ancho que la imagen principal */
    height: 800px; /* Igual altura que la imagen principal */
    overflow: hidden;
  }

  .teacher-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      text-align: center;
    }

    .image-container,
    .teacher-image {
      width: 100%;
      height: auto;
    }

    .teacher-image {
      margin-top: 2rem;
    }
  }
</style>


  <div class="container">
    <!-- Componente React para el formulario de login -->
    <Login client:load />

    <!-- Imagen secundaria -->
    <div class="teacher-image">
      <img src="/images/teacherEsam.jpeg" alt="Teacher ESAM" />
    </div>
  </div>
</Layout>
